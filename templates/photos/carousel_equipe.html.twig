{% extends('base1.html.twig') %}
{% block title %}

    {{ equipe.edition.ed }}   Les photos des Olympiades de Physique {% endblock %}


{% block titre3 %}

    <div style="text-align: center; color:blue" class="color">
        <h4>Les photos de la {{ equipe.edition.ed}}<sup>e</sup> Ã©dition <br></h4>

        <h4>Equipe {{ equipe.numero }}
            {% if equipe.lettre!=null %}
                ({{ equipe.lettre }}) -
            {% endif %}
            {{ equipe.titreProjet }}</h4>
    </div>
{% endblock %}


{% block body %}
    <div class="container">
        <div class="row>">
            <div class="col">
                <div> <button type="button" class="btn btn-primary" style="margin: auto" onclick="history.back()">Retour</button></div>
                <div id="carouselEquipe" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        {% set i=0 %}
                        {% for photo in photos %}
                            {% if i == 0 %}
                                <li data-target="#carouselEquipe" data-slide-to="{{ i }}" class="active"></li>
                            {% endif %}
                            {% if i>0 %}
                                <li data-target="#carouselEquipe" data-slide-to="{{ i }}"></li>
                            {% endif %}
                            {% set i = i + 1 %}
                        {% endfor %}
                    </ol>

                    <div class="carousel-inner">
                        {% set i=0 %}
                        {% for photo in photos %}
                            {% if i==0 %}
                                <div class="carousel-item active">
                                    <img class="d-block w-100"
                                         src="{{ asset('odpf/odpf-archives/'~photo.equipe.edition.ed~'/photoseq/'~photo.photo) }}"
                                         alt="{{ photo.photo }}">
                                </div>
                            {% endif %}
                            {% if i>0 %}
                                <div class="carousel-item">
                                    <img class="d-block w-100"
                                         src="{{ asset('odpf/odpf-archives/'~photo.equipe.edition.ed~'/photoseq/'~photo.photo) }}"
                                         alt="{{ photo.photo }}"></div>
                            {% endif %}
                            {% set  i = i + 1 %}
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#carouselEquipe" role="button" data-slide="prev">
                        <img src="{{ asset('odpf/odpf-images/diapo-arwl-37x37.png') }}"
                             style="align-self: flex-end; "
                             alt=""/>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselEquipe" role="button" data-slide="next">
                        <img src="{{ asset('odpf/odpf-images/diapo-arwr-37x37.png') }}"
                             style="align-self: flex-end; "
                             alt=""/>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}